{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "dist",
    "sourceMap": true,
    "plugins": [

    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/joint-react/**/*.ts", "./src/joint-react/**/*.tsx"],
  "exclude": ["node_modules"]
}
